{
  "name": "@yuzu/api",
  "private": true,
  "version": "1.0.1",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -b && wrangler deploy --dry-run --outdir=build",
    "clean": "rm -rf .turbo .wrangler build node_modules",
    "dev": "tunnel wrangler dev --port 5172",
    "deploy:staging": "wrangler secret bulk .staging.vars.json --env staging && wrangler deploy --env staging",
    "deploy:production": "wrangler secret bulk .production.vars.json --env production && wrangler deploy --env production"
  },
  "cloudflared": {
    "name": "yuzu-api-$USER",
    "hostname": "yuzu-api-$USER.r8edev.xyz",
    "target": "http://localhost:5172"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@supabase/supabase-js": "^2.46.1",
    "@types/big.js": "^6.2.2",
    "@yuzu/sdk": "workspace:*",
    "@yuzu/supabase": "workspace:*",
    "big.js": "^6.2.2",
    "hono": "^4.6.11",
    "hono-do": "^2.0.0",
    "viem": "^2.22.2",
    "wrangler": "^3.99.0",
    "zod": "^3.23.8"
  }
}
