{
  "name": "@yuzu/api",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "dev": "tunnel wrangler dev --port 5172",
    "deploy:staging": "wrangler secret bulk .staging.vars.json --env staging && wrangler deploy --env staging"
  },
  "cloudflared": {
    "name": "yuzu-api-$USER",
    "hostname": "yuzu-api-$USER.r8edev.xyz",
    "target": "http://localhost:5172"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@supabase/supabase-js": "^2.46.1",
    "@types/big.js": "^6.2.2",
    "@yuzu/supabase": "workspace:*",
    "big.js": "^6.2.2",
    "hono": "^4.6.11",
    "viem": "^2.21.47",
    "wrangler": "^3.88.0",
    "zod": "^3.23.8"
  }
}
