{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "envMode": "loose",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**", "tsconfig.tsbuildinfo", "out/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "deploy:staging": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
