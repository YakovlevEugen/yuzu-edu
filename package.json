{
  "name": "yuzu",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "pnpm run -r clean && rm -rf .turbo node_modules",
    "format": "biome check --fix --no-errors-on-unmatched --files-ignore-unknown=true",
    "deploy:staging": "turbo run deploy:staging"
  },
  "lint-staged": {
    "*.+(css|scss)": ["stylelint --fix"],
    "*": [
      "biome format --write --no-errors-on-unmatched",
      "biome check --fix --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "packageManager": "pnpm@9.12.3",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "turbo": "^2.3.3"
  }
}
